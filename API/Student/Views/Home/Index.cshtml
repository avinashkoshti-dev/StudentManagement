
@{
    ViewData["Title"] = "Index";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .modal-backdrop.fade.show {
        z-index: inherit;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<div class="right_col" role="main">
    <div class="title_left">
        <h3>Student</h3>
    </div>
    <div class="box-header">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal"> <i class="fa fa-plus"></i>Add Student</button>
    </div>

    <div class="x_panel">
        <div class="x_title">
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="StudentTable" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Standard</th>
                        <th>City</th>
                        <th>DOB</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
            </table>
        </div>
    </div>

    <div class="modal" id="myModal">
        <div class="modal-dialog modal-mf">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Add Student</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form role="form">
                        <div class="row">
                            <div class="form-group col-md-6 mb-3">
                                <input type="hidden" class="form-control" id="ID">
                                <label for="lastname">First Name</label>
                                <input type="text" class="form-control" required id="firstname" placeholder="First Name">
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <input type="hidden" class="form-control" id="ID">
                                <label for="lastname">Last Name</label>
                                <input type="text" class="form-control" required id="lastname" placeholder="Last Name">
                            </div>

                            <div class="form-group col-md-12 mb-3">
                                <label for="add">Address</label>
                               @*   <input type="text" class="form-control" rows="4" cols="50" required id="add" placeholder="Address"> *@

                                 <textarea id="add" class="form-control" name="add" rows="3"> </textarea>
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label for="city">City</label>
                                <input type="text" class="form-control" required id="city" placeholder="City">
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label for="state">State</label>
                                <input type="text" class="form-control" required id="state" placeholder="State">
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label for="zip">Zip</label>
                                <input type="number" class="form-control" maxlength="6" required id="zip" placeholder="Zip">
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label for="std">Standard</label>
                                <input type="number" class="form-control" required id="std" placeholder="Standard">

                            </div>
                            <div class="form-group col-md-12">
                                <label for="dob">DOB</label>
                                <input type="date" class="form-control" maxlength="6" required id="dob" placeholder="DOB">
                            </div>
                          
                        </div>
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" id="btnAdd" onclick="Add();" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                </div>

            </div>
        </div>
    </div>

</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="~/js/Student.js asp-append-version="true"></script>